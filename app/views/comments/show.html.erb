<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Comment #<%= @comment.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Contents</dt>
              <dd><%= @comment.contents %></dd>

              <dt>User</dt>
              <dd><%= @comment.user_id %></dd>

              <dt>Event</dt>
              <dd><%= @comment.event_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), comments_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_comment_path(@comment), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @comment, method: :delete, data: { confirm: "Do you really want to delete this comment?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
