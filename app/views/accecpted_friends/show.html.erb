<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Accecpted Friend #<%= @accecpted_friend.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>User id 1</dt>
              <dd><%= @accecpted_friend.user_id_1 %></dd>

              <dt>User id 2</dt>
              <dd><%= @accecpted_friend.user_id_2 %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), accecpted_friends_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_accecpted_friend_path(@accecpted_friend), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @accecpted_friend, method: :delete, data: { confirm: "Do you really want to delete this accecpted_friend?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
